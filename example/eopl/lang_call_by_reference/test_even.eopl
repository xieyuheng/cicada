let x = 0
let true = zero_p(0)
let false = zero_p(1)
let rec even = (_) => {
  if zero_p(x) { true } else {
    do set x = diff(x, 1) {
      odd(sole)
    }
  }
}
and odd = (_) => {
  if zero_p(x) { false } else {
    do set x = diff(x, 1) {
      even(sole)
    }
  }
}
do set x = 12
do assert_eq(even(sole), true)
do set x = 11
do assert_eq(even(sole), false) {
  sole
}
