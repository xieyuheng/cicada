let devil = 666
let angel = 123
let true = zero_p(0)
let false = zero_p(1)
let rec odd = (x) => {
  if zero_p(x) {
    false
  } else {
    if zero_p(diff(x, 1)) {
      true
    } else {
      odd(diff(x, 2))
    }
  }
}
let rec even = (x: int_t) => {
  if zero_p(x) {
    true
  } else {
    if zero_p(diff(x, 1)) {
      false
    } else {
      even(diff(x, 2))
    }
  }
}
do assert_eq(even(0), true)
do assert_eq(even(1), false)
do assert_eq(even(2), true)
do assert_eq(even(3), false) {
  sole
}
